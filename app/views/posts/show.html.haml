- title @post.title
%h1= h @post.title
%p
  %b Slug:
  = h @post.slug
%p
  %b Body:
  = @post.body
%p
  %b Published:
  = h @post.published
%p
  %b Published on:
  = h @post.published_on
Comments: #{@comments.count}

\#{render :partial => @comments}

Leave a comment:

\#{form_for [@post, @post.comments.build] do |f|}
  = f.error_messages
  %p
    = f.label :body
    %br/
    = f.text_field :body
  %p
    = f.label :url
    %br/
    = f.text_field :url
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :spam
    %br/
    = f.check_box :spam
  %p
    = f.label :published
    %br/
    = f.check_box :published
  %p
    = f.submit 'Add Comment'
= link_to 'Edit', edit_post_path(@post)
|
\#{link_to 'Back', posts_path}
