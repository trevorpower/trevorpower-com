<% title "New Post" %>

<div class="content">
<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :published_on %><br />
    <%= f.date_select :published_on %>
  </p>
  <p>
    <%= f.check_box :published %>
    <%= f.label :published %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
</div>
