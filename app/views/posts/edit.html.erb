<h1>Editing post</h1>

<% form_for(@post) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <!-- this was causing the update action to fail, left out for now
  <p>
    <%= f.label :published_on %><br />
    <%= f.date_select :published_on %>
  </p>  -->
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<% form_tag({:action => "create", :controller => "image"}, :method => :post, :multipart => true) do %>
  <%= hidden_field_tag(:post_id, @post.id) %>   
  <%= file_field_tag 'picture' %>
  <%= submit_tag 'Upload' %>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
