<% title "Posts" %>
<div class="content">
  <%= link_to 'New post', new_post_path %>
</div>
  <table>
  <% @posts.each do |post| %>
  <tr id="<%= post.dom_id %>" class="<%= post.published ? 'published' : 'draft' %>">
    <td><%= post.published_on.to_s(:admin) %></td>
    <td>
      <%= link_to post.title, blog_post_path(:slug => post.slug ) %>
    </td>
    <td class="action"><%= link_to 'Edit', edit_post_path(post) %></td>
    <% if post.published %>
      <td class="action"><%= link_to 'Hide', hide_post_path(post), :method => :put %></td>
    <% else %>
      <td class="action"><%= link_to 'Publish', publish_post_path(post), :method => :put %></td>
    <% end %>
    <td class="action"><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
  </table>
<br />

