<h1>Listing images</h1>

<table>
  <% @images.each do |image| %> 
  <tr id="<%= image.dom_id %>">
    <td><img src="<%= image.url %>" width="60px"/></td>
    <td><%= image.url %></td>
    <td><%= link_to 'Delete', image.slug, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% end %>
</table>

<% form_tag({:action => "create", :controller => "images"}, :method => :post, :multipart => true) do %>
  <%= file_field_tag 'picture' %>
  <%= submit_tag 'Upload' %>
<% end %>

