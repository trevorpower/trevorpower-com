<% title "Comments" %>
<ul data-role="listview">
  <% @comments.each do |comment| %> 
    <li id="<%= comment.dom_id %>" data-theme="<%= comment.published ? 'a' : 'd' %>">
      <h3><%=h comment.name %><br/><%=h comment.url %></h3>
      <p><%=h comment.body %></p>
      <h3><%=h comment.post_title %><br/><%=h comment.published_on.to_s(:admin) %></h3>
      <% if comment.published %>
        <%= button_to 'Hide', hide_comment_path(comment), :method => :put %>
      <% else %>
        <%= button_to 'Show', publish_comment_path(comment), :method => :put %>
      <% end %>
      <%= button_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %>
    </li>
  <% end %>
</ul>
