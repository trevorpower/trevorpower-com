<% title "Comments" %> 
<div data-role="footer" class='ui-bar'>
  <% if @allow_comments %>
    <%= link_to 'Deactivate Commenting', deactivate_comments_path, :method => 'put', 'data-icon' => 'alert' %>
  <% else %>
    <%= link_to 'Activate Commenting', activate_comments_path, :method => 'put', 'data-icon' => 'check', 'data-theme' => 'e' %>
  <% end %>
</div>
<ul data-role="listview">
  <% @comments.each do |comment| %> 
    <li id="<%= comment.dom_id %>" data-theme="<%= comment.published ? 'a' : 'd' %>">
      <h3><a href='#'><%=h comment.name %></a><br/><%=h comment.url %></h3>
      <p><%=h comment.body %></p>
      <p><b><%=h comment.post_title %> - <%=h comment.published_on.to_s(:admin) %></b></p>
      <ul>
        <li>
          <% if comment.published %>
            <%= link_to 'Hide', hide_comment_path(comment), :method => :put %>
          <% else %>
            <%= link_to 'Show', publish_comment_path(comment), :method => :put %>
          <% end %>
        </li>
        <li>
          <%= link_to 'Destroy', comment, :confirm => 'Are you sure?', :method => :delete %>
        </li>
      </ul>
    </li>
  <% end %>
</ul>
<%= link_to 'Previous', comments_path( :page => "#{@prev_page}" )%>
<%= link_to 'Next', comments_path( :page => "#{@next_page}" )%>
