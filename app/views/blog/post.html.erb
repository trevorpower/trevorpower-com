<% title @post.title %>
<% area :blog %>

  <p class="notice"><%= flash[:notice] %></p>
  <h1><%= h(@post.title) %></h1>
  <h3><%=h @post.published_on.to_s(:public) %></h3><br />
  <%= @post.body %>

  <%= render :partial => @comments %>
 
  <% unless @comment_saved %>
    <h3>Leave a Comment</h3>
    <% form_for @comment, :url => blog_post_path(:slug => @post.slug) do |f| %>
      <%= f.error_messages %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :url %>
      <%= f.text_field :url %>
      <%= f.label :body %>
      <%= f.text_area :body %>
      <%= f.submit 'Add Comment' %>
    <% end %>
  <% else %>
    <h3>Your comment has been saved</h3>
  <% end %>

