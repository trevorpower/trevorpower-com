<% title "Blog" %>
  <div class='content'>
    <a href="http://feeds.feedburner.com/trevorpower">Subscribe</a> to this blog.
  </div>

  <% @posts.each do |post| %>

    <div class='content'>
      <h2><%= link_to post.title, blog_post_path(post) %></h2>
      <span class='date'><%=h post.published_on %></span><br />
      <%= post.body %>
    </div>
      
  <% end %>
