<% title "Blog" %>
<% area :blog %>

  <ul data-role="listview">

    <li data-role="listdevider" data-theme="e"><a href="http://feeds.feedburner.com/trevorpower">Subscribe</a> to this blog</li>

    <% @posts.each do |post| %>
  
      <li>
        <h2><%= link_to post.title, blog_post_path(:slug => post.slug), :'data-ajax' => 'false' %></h2>
        <p class="ui-li-aside"><%=h post.published_on.to_s(:public) %></p>
        <p><%= HTML_Truncator.truncate(Sanitize.clean(post.body), 80, "...") %></p>
        <%= link_to('read more', blog_post_path(:slug => post.slug), :'data-ajax' => 'false' ) %>
      </li>
        
    <% end %>
  </ul>
