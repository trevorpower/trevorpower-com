<% title "Contact" %>
<h1>Contact</h1>

<p>follow <a href="http://twitter.com/trevorpower">me on twitter</a></p>

<% form_for :email, :url => send_mail_path do |f| %>
<%= f.label :name %><br />
<%= f.text_field :name, :size => 60 %><br />
<%= f.label :address %><br />
<%= f.text_field :address, :size => 60 %><br />
<%= f.label :subject %><br />
<%= f.text_field :subject, :size => 60 %><br />
<%= f.label :body %><br />
<%= f.text_area :body, :rols => 10, :cols => 60 %><br />
<%= submit_tag "Send Email"%>
<% end %>

